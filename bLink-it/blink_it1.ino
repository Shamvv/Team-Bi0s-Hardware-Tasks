  digitalWrite(ledPin2, LOW);
  delay(1000);
  digitalWrite(ledPin1, HIGH);
  delay(1000);
  digitalWrite(ledPin1, LOW);
  delay(1000);
  digitalWrite(ledPin0, HIGH);
  delay(1000);
  digitalWrite(ledPin0, LOW);
  delay(1000);
